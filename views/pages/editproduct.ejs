<html>

<head>

</head>

<body>
    <% _.each(_product, function (product) { %>
    <form method="POST" action="/updateproduct/<%= product.id %>">
        <div class="form-row">
            <div class="form-group col-5">
                <label for="productName">Product name</label>
                <input type="text" class="form-control" id="name" name="name" value="<%= product.name %>">
            </div>
            <div class="form-group col">
                <label for="price">Price</label>
                <input type="text" class="form-control" id="price" name="price" value="<%= product.price %>">
            </div>
            <div class="form-group col">
                <label for="percentage">Percentage of cocoa</label>
                <input type="text" class="form-control" id="percentage" name="percentage"
                    value="<%= product.percentage %>">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-5">
                <label for="producer">Select producer</label>
                <select class="form-control" id="producer" name="producer">
                    <% _.each(_allProducers, function (producer) { %>
                    <% if (product.producer == producer.name) { 
                            %>
                    <option selected value="<%= product.producer %>"><%= product.producer %></option>
                    <%
                            }
                            else {
                            %>
                    <option value="<%= producer.name %>"><%= producer.name %></option>
                    <%
                            }
                            %>
                    <% }) %>
                </select>
            </div>

            <div class="form-group">
                <label for="type">Select type</label>
                <select class="form-control" id="type" name="type">
                    <option <% if (product.type == 'Milk') {%> selected <% } %> value="Milk">Milk</option>
                    <option <% if (product.type == 'Dark') {%> selected <% } %> value="Dark">Dark</option>
                    <option <% if (product.type == 'White') {%> selected <% } %> value="White">White</option>
                    <option <% if (product.type == 'Rose') {%> selected <% } %> value="Rose">Rose</option>
                </select>
            </div>
            <div class="form-group col">
                <label for="weight">Weight</label>
                <input type="text" class="form-control" id="weight" name="weight" value="<%= product.weight %>">
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Edit</button>
    </form>
    <% }) %>
</body>

</html>